  "authors": [
    "TexTrue","Globox_Z"
  ],
  "contact": {
    "homepage": "https://github.com/TexTrueStudio/PatchouliButton-Backport",
    "sources": "https://github.com/TexTrueStudio/PatchouliButton-Backport",
    "issues": "https://github.com/TexTrueStudio/PatchouliButton-Backport/issues"
  },
  "license": "MIT",
  "icon": "assets/patchoulibutton/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.patchoulibutton.PatchouliButton"
    ],
    "client": [
      "net.patchoulibutton.PatchouliButtonClient"
    ],
    "modmenu": [
      "net.patchoulibutton.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "patchoulibutton.mixins.json"
